.categories__contents
  %ul.categories__lists
    %li.categories__list
      = link_to "/", class: "category__link" do
        = "カテゴリーから探す"
      %ul.category__parents.category__name
        - @parents.each do |parent|
          %li.category1
            = link_to "/", class: "category__parents--name2" do
              = parent.name
            %ul.category__childs.category__name
              - parent.children.each do |child|
                %li.childs
                  = link_to "/", class: "category__child--name2" do
                    = child.name
                  %ul.category__grandchilds.category__name
                    - child.children.each do |grandchild|
                      %li.grandchilds
                        = link_to "/", class: " category__child--name2" do
                          = grandchild.name